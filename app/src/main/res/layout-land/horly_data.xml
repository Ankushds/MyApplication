<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl"
    android:theme="@style/lightStyle"
    android:layout_width="match_parent"
    android:layout_height="214dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="211dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/precip1"
                android:layout_width="200dp"
                android:layout_height="28dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/temperature1"
                android:layout_marginTop="1dp"
                android:text="Precip:"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/temperature1"
                android:layout_width="190dp"
                android:layout_height="28dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/summary1"
                android:layout_marginTop="1dp"
                android:text="Temprature"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/wind1"
                android:layout_width="200dp"
                android:layout_height="28dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/pressure1"
                android:layout_marginTop="1dp"
                android:text="WindSpeed:"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/pressure1"
                android:layout_width="200dp"
                android:layout_height="28dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/visibility1"
                android:layout_marginTop="1dp"
                android:text="Pressure"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/visibility1"
                android:layout_width="200dp"
                android:layout_height="28dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/humidity1"
                android:layout_marginTop="1dp"
                android:text="Visibility"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/humidity1"
                android:layout_width="200dp"
                android:layout_height="28dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/precip1"
                android:layout_marginTop="1dp"
                android:text="Humidity:"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/summary1"
                android:layout_width="160dp"
                android:layout_height="28dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="2dp"
                android:text="Summary:"
                android:textSize="15sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/hLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="2dp"
                android:text="Location"
                android:layout_marginEnd="20dp"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/hSunImg"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_alignBottom="@+id/wind1"
                android:layout_alignParentEnd="true"
                android:layout_gravity="right"
                android:layout_marginEnd="14dp"
                android:layout_marginLeft="17dp" />

            <TextView
                android:id="@+id/updateTime1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LastUpdate:"
                android:layout_above="@+id/precip1"
                android:layout_alignEnd="@+id/hSunImg"
                android:layout_marginEnd="20dp" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>